extends layout.pug 

block content
  if errorMessage
    div=errorMessage
  form(method="POST")
    input(name="currentPassword" type="password" placeholder="현재 비밀번호를 입력하세요" required )
    input(name="newPassword" type="password" placeholder="새로운 비밀번호를 만드세요." required )
    input(name="newPasswordConfirm" type="password" placeholder="새로운 비밀번호를 다시 입력하세요." required )
    input(type="submit", value="비밀번호 변경 완료")